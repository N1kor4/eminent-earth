---
// library imports
import { Image } from 'astro:assets';

// utils import
import { slugify, formatDate } from '../js/utils.js';

// Astro component imports
const {title, date, category, author, image} = Astro.props;
---

<header>
        <div class="container">
            <small>
                <a href={`/category/${slugify(category)}`} class="badge">
                    {category}
            </small>
            <h1 class="h2">{title}</h1>
            <p>
                by <a href={`/author/${slugify(author)}`}>{author}</a> on {formatDate(date)}
            </p>
        </div>
        <Image
            src={image.src}
            alt={image.alt}
            width={1200}
            height={600}
            format="avif"
            fit="cover"
            quality={80}
            class="hero-image"
            />
    </header>