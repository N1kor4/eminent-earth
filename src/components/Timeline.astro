---
const { items } = Astro.props; // items : tableau d'objets {title, url, date, description}
---

<div class="timeline">
  {items.map((item, i) => {
    const side = i % 2 === 0 ? "left" : "right";
    // Décalage vertical en rem : 2.5 * floor(i / 2)
    const translateY = -5 * Math.floor(i / 2) - 2.5 * (i % 2);
    return (
      <div
        class={`timeline-item ${side}`}
        style={`transform: translateY(${translateY}rem); left: ${side === "left" ? "0" : "50%"};`}
      >
        <div class="content">
          <span class="date">{new Date(item.date).getFullYear()}</span>
          <h3><a href={item.url}>{item.title}</a></h3>
          <p>{item.description}</p>
          <a href={item.url} class="read-more">Learn more →</a>
        </div>
      </div>
    );
  })}
</div>


<style>
.timeline {
  position: relative;
  max-width: 900px;
  margin: auto;
  display: flex;
  flex-direction: column;
}
.timeline::after {
  content: '';
  position: absolute;
  width: 3px;
  background-color: #ccc;
  top: 0;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.timeline-item {
  display: flex;
  width: 100%;
  margin-bottom: 0.5rem;
}
.timeline-item.left {
  justify-content: flex-end;
  padding-right: 2rem;
}
.timeline-item.right {
  justify-content: flex-start;
  padding-left: 2rem;
}
.content {
  background: #222;
  border-radius: 6px;
  padding: 0.8rem 1rem;
  border: 1px solid #ddd;
  box-shadow: 0 1px 4px rgb(0 0 0 / 0.05);
  max-width: 45%;
}
.date {
  font-size: 0.85rem;
  color: gray;
}
.read-more {
  display: inline-block;
  margin-top: 0.3rem;
  font-size: 0.85rem;
  color: var(--accent-color, #007acc);
}
</style>
