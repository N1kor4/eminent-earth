---
const defaultLang = "en"; // fallback if detection fails
---

<!DOCTYPE html>
<html lang={defaultLang}>
  <head>
    <meta charset="UTF-8" />
    <title>Redirecting...</title>
    <!-- Fallback if JS is disabled -->
    <meta http-equiv="refresh" content={`0; url=/${defaultLang}/`} />
    <script is:inline>
      (function() {
        // Detect navigator language: if it starts with "fr" → French, otherwise English
        const lang = navigator.language.startsWith("fr") ? "fr" : "en";
        window.location.replace(`/${lang}/`);
      })();
    </script>
  </head>
  <body>
    <p>Redirecting to your preferred language…</p>
    <p><a href={`/${defaultLang}/`}>Click here if you are not redirected automatically.</a></p>
  </body>
</html>
